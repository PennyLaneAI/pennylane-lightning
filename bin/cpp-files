#!/usr/bin/python3

from pathlib import Path
import sys
from conf import CPP_SOURCE_DIRS_DOCUMENTS
from utils import get_cpp_files


if __name__ == '__main__':
    """
    This program output a json list of all C++ source files for documentation.
    If you want to add more C++ files in the documents, please change 
    CPP_SOURCE_DIRS_DOCUMENTS in conf.py.
    """
    import argparse
    import json

    paths = CPP_SOURCE_DIRS_DOCUMENTS
    files = get_cpp_files(paths)
    json.dump(files, sys.stdout)
